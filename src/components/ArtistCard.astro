---
const { Artist, Date, img } = Astro.props;
---

<li>
  <article>
    <figure class="container">
      <img src={`/img/${img}`} alt="" height="250" width="250" />
      <div class="centered">{Artist}</div>
      <div class="top-right">{Date}</div>
    </figure>
  </article>
</li>

<style>
  article {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  figure {
    display: grid;
    grid: "stack";
    place-items: start;
    order: -1;
  }

  figure > * {
    grid-area: stack;
  }
  .container {
    position: relative;
    text-align: center;
    color: white;
    transition: transform 0.2s; /* Animation */
  }

  .container:hover {
    transform: scale(1.05);
    color: #090284;
    transition: 0.3s;
    image-resolution: ;
  }

  .container:hover img {
    opacity: 0.6;
  }

  .container:hover .top-right {
    color: white;
  }

  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 22px;
    text-transform: uppercase;
  }

  .top-right {
    position: absolute;
    top: 8px;
    right: 16px;
    background-color: #090284;
    padding: 2px 10px 1px 10px;
    border-radius: 5px;
    font-size: 13px;
  }

  img {
    border-radius: 22px;
  }
</style>
