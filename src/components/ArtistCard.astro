---
const { title, date } = Astro.props;
---

<article>
  <div class="container">
    <img src="img/accelerationism.webp" alt="" />
    <div class="centered">{title}</div>
    <div class="top-right">{date}</div>
  </div>
</article>

<style>
  .container {
    position: relative;
    text-align: center;
    color: white;
  }

  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .centered:hover {
    color: #090284;
    transition: 0.3s;
  }

  .top-right {
    position: absolute;
    top: 8px;
    right: 16px;
    background-color: #090284;
    padding: 2px 10px 1px 10px;
    border-radius: 5px;
  }

  img {
    border-radius: 20px;
  }
</style>
