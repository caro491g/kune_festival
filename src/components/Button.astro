---
const { variant = "primary", size = "medium", placement = "index" } = Astro.props;
---

<button data-variant={variant} data-size={size} data-placement={placement}>
  <slot />
</button>

<style>
  button:hover {
    scale: 1.04;
  }

  /* Variants */
  [data-variant="primary"] {
    background: #090284;
    color: #f5f0e3;
    padding: 5rem;
    display: flex;
    border-radius: 1rem;
  }
  /* Sizes */
  [data-size="medium"] {
    font-size: 16px;
    padding-block: 1.2rem;
    padding-inline: 2rem;
  }

  [data-placement="index"] {
    margin-left: 42%;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  [data-variant="secondary"] {
    background: #f5f0e3;
    color: #090284;
    display: flex;
    border-radius: 1rem;
  }

  [data-placement="lineup"] {
    margin-left: 43%;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
